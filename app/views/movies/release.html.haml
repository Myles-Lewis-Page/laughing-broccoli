-#  This file is app/views/movies/index.html.haml
%h1 All Movies



%table#movies
  %thead
    %tr
      %th Movie Title
      %th= link_to "Rating"
      %th.hilite= link_to "Release Date"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)


